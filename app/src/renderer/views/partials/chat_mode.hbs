<div id='conversation-container' class='flex-grow overflow-y-auto'>
  <div
    id='conversation'
    class='mt-2 relative flex flex-col text-sm w-full'
  ></div></div>
<form class='mt-auto z-10'>
  <div
    id='composer'
    class='flex w-full cursor-text flex-col rounded-xl border px-3 py-1 contain-inline-size max-h-[25dvh] overflow-auto dark:border-neutral-600'
  >
    <div class='flex min-h-[44px] items-start pl-1'>
      <textarea
        class='hidden text-left text-gray-700 bg-gray-100 dark:bg-neutral-700 dark:text-gray-300'
        id='chat-textarea'
      ></textarea>
      <div
        contenteditable='true'
        id='chat-prompt'
        class='outline-transparent dark:caret-text-gray-300 focus:outline-none dark:text-gray-100 border-transparent placeholder'
        placeholder='Start chatting'
      ></div>
    </div>
    <div class='items-end'></div>
  </div>
</form>
