<div id='conversation-container' class='flex-grow overflow-y-auto'>
  <div
    id='conversation'
    class='mt-2 relative flex flex-col text-sm w-full'
  ></div>
  <div
    id='loading-spinner'
    class='flex hidden text-gray-700 dark:text-gray-300 my-1 p-2'
  >
    <svg
      class='animate-spin -ml-1 mr-3 h-5 w-5'
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
    >
      <circle
        class='opacity-25'
        cx='12'
        cy='12'
        r='10'
        stroke='currentColor'
        stroke-width='4'
      ></circle>
      <path
        class='opacity-75'
        fill='currentColor'
        d='M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z'
      ></path>
    </svg>
    <span class='text-gray-500'>Thinking...</span>
  </div>
</div>
<form class='mt-auto z-10'>
  <div
    id='composer'
    class='flex w-full cursor-text flex-col rounded-xl border px-3 py-1 contain-inline-size max-h-[25dvh] overflow-auto dark:border-neutral-600'
  >
    <div id='chat-container' class='flex items-start pl-1'>
      <textarea
        class='hidden text-left text-gray-700 bg-gray-100 dark:bg-neutral-700 dark:text-gray-300'
        id='chat-textarea'
      ></textarea>
      <div
        contenteditable='true'
        id='chat-prompt'
        class='outline-transparent dark:caret-text-gray-300 focus:outline-none dark:text-gray-100 border-transparent placeholder'
      ></div>
    </div>
    <div class='items-end'></div>
  </div>
</form>
