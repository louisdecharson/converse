<div class="hidden cursor-pointer p-1 border-b border-gray-300 dark:border-gray-500 dark:bg-neutral-600 dark:text-neutral-300 hover:bg-gray-100 dark:hover:bg-neutral-700"></div>
<div
  class='bg-gray-100 dark:bg-neutral-700 px-4 py-2 rounded-lg w-64 flex flex-col {{#if pinned}}pinned{{/if}} tasks'
  style='height:120px'
    id='task-{{rowid}}'
>
  <div id='task-header' class='mb-1 flex flex-row w-full'>
    <h2
      class='font-bold text-sm text-gray-800 dark:text-gray-200 text-left flex-1'
    >{{name}}</h2>
    <button
      type='button'
      data-taskid='{{rowid}}'
      data-taskname='{{name}}'
      onclick='deleteItem(this)'
      class='text-gray-600 dark:text-gray-200 w-[16px]'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 24 24'
        stroke-width='1.5'
        stroke='currentColor'
        height='16'
        width='16'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0'
        />
      </svg>
    </button>
    <button
      type='button'
      data-taskid='{{rowid}}'
      onclick='pinItem(this)'
      class='text-gray-600 dark:text-gray-200 w-[16px]'
    >
      <svg width="16" height="16" viewBox="0 0 300 300" fill="{{#if pinned}}currentColor{{else}}none{{/if}}" xmlns="http://www.w3.org/2000/svg" stroke="currentColor" stroke-width="20">
        <path d="M124.282 176.176L53.2174 247.24M191.457 2.93436L153.627 84.6052L71.2486 123.143L176.607 228.501L215.852 146.831L296.816 108.293L191.457 2.93436Z" />
      </svg>
    </button>
  </div>
  <p
    class='text-gray-600 dark:text-gray-200 mb-1 text-left text-sm flex-1 overflow-auto'
    style='height:50px'
  >{{description}}</p>
  <div class='mt-2 text-left space-x-2'>
    <a class='native-button native-action-button' href='./task/{{rowid}}'>
      Start
    </a>
    <a
      class='native-button native-white-button'
      href='./edit_task?taskid={{rowid}}'
    >
      Edit
    </a>
  </div>
</div>
